# OpenSky Network API
# Create your account at: https://opensky-network.org/
OPENSKY_USERNAME=your-opensky-username
OPENSKY_PASSWORD=your-opensky-password
OPENSKY_API_BASE_URL=https://opensky-network.org/api

# Airport Configuration
AIRPORT_ICAO=DXXX
AIRPORT_NAME=Lome Airport

# Synchronization
SYNC_INTERVAL_MINUTES=5
SYNC_LOOKBACK_HOURS=2

# AI Models Configuration
USE_MOCK_AI=true
ML_API_BASE_URL=https://tagba-ubuntuairlab.hf.space
ML_API_TIMEOUT=30.0
ML_API_MAX_RETRIES=3

# Database
DATABASE_URL=postgresql+asyncpg://airport_user:airport_pass@postgres:5432/airport_db
DATABASE_ECHO=false

# Redis Cache
REDIS_URL=redis://redis:6379/0
ENABLE_PREDICTION_CACHE=true
CACHE_TTL_SECONDS=300

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_PER_MINUTE=100
