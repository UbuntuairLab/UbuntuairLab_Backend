# Production Environment Variables
# Copy this file to .env.production and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=airport_db
DB_USER=airport_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_PORT=5433

# For Azure PostgreSQL Flexible Server:
# DATABASE_URL=postgresql+asyncpg://airport_user:PASSWORD@ubuntuairlab-db.postgres.database.azure.com:5432/airport_db?sslmode=require

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# For Azure Redis Cache:
# REDIS_URL=redis://:PRIMARY_KEY@ubuntuairlab-redis.redis.cache.windows.net:6380/0?ssl=true

# =============================================================================
# OPENSKY NETWORK API
# =============================================================================
OPENSKY_USERNAME=your-opensky-username
OPENSKY_PASSWORD=your-opensky-password
OPENSKY_API_BASE_URL=https://opensky-network.org/api

# =============================================================================
# AIRPORT CONFIGURATION
# =============================================================================
AIRPORT_ICAO=DXXX
AIRPORT_NAME=Lome Airport

# =============================================================================
# SYNCHRONIZATION
# =============================================================================
SYNC_INTERVAL_MINUTES=5
SYNC_LOOKBACK_HOURS=2

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# CRITICAL: Generate a strong secret key for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_PREFIX=/api/v1
API_PORT=8000

# CORS Origins (comma-separated)
# For production, specify your frontend domain(s)
CORS_ORIGINS=["https://air-lab.bestwebapp.tech","https://bestwebapp.tech"]

# =============================================================================
# MACHINE LEARNING MODELS
# =============================================================================
USE_MOCK_AI=false

# Hugging Face Model Endpoint
ML_API_BASE_URL=https://tagba-ubuntuairlab.hf.space
ML_API_TIMEOUT=30.0
ML_API_MAX_RETRIES=3

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
ENABLE_PREDICTION_CACHE=true
CACHE_TTL_SECONDS=300

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MONITORING & METRICS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# Grafana (optional - for monitoring profile)
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# =============================================================================
# DATABASE (for connection testing)
# =============================================================================
DATABASE_ECHO=false

# =============================================================================
# AZURE SPECIFIC (if deploying to Azure)
# =============================================================================
# These are automatically set by Azure App Service
# WEBSITES_PORT=8000
# WEBSITES_CONTAINER_START_TIME_LIMIT=600
